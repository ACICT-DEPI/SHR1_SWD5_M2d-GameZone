 @model IEnumerable<CartItem>

 <form asp-controller="CartItem" enctype="multipart/form-data">

 @if (Model != null )
 {
         <style>
             table {
                 width: 100%;
                 border-collapse: collapse;
                 margin: 20px 0;
                 font-size: 18px;
                 text-align: left;
             }

             table, th, td {
                 border: 1px solid #dddddd;
                 padding: 8px;
             }

             th {
                 background-color: #dddddd;
                 color: black;
             }

            @*  tr:hover {
                 background-color: #f5f5f5;
             } *@

             input[type="submit"] {
                 background-color: #ff6666;
                 color: white;
                 border: none;
                 padding: 8px 12px;
                 cursor: pointer;
                 border-radius: 4px;
             }

             input[type="submit"]:hover {
                 background-color: #ff4d4d;
             }
         </style>

         @* <input type="hidden" name="productId" value="@Model.GameId" /> *@
        <div style="
    margin: auto;
    text-align: center;
    margin-top: 10%;">
            <input type="submit" value="Add this game" asp-action="Index" 
         style="font-size: 30px;
    margin-right: 115px;
    background-color: #1c9d1c;" />
         <input type="submit" value="Back " asp-controller="Home" asp-action="Index" style="font-size: 30px;" />
        </div>
         
         
 
 }
 else
 {
     
        <div class="alert alert-secondary m-3 w-50 fs-4 rounded-4 " role="alert">
           The card is empty !
          
        </div>
 }
 </form>
